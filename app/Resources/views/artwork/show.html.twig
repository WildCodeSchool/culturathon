{% extends 'base.html.twig' %}

{% block body %}
    <h1>Artwork</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artwork.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ artwork.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if artwork.date %}{{ artwork.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ artwork.size }}</td>
            </tr>
            <tr>
                <th>Technique</th>
                <td>{{ artwork.technique }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ artwork.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('artwork_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('artwork_edit', { 'id': artwork.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
