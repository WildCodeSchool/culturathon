{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Artwork</h1>

        <table class="table table-bordered">
            <thead class="thead-dark">
            <tr>
                <th scope="row">Id</th>
                <th scope="row">Name</th>
                <th scope="row">Date</th>
                <th scope="row">Size</th>
                <th scope="row">Technique</th>
                <th scope="row">Description</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>{{ artwork.id }}</td>
                <td>{{ artwork.name }}</td>
                <td>{% if artwork.date %}{{ artwork.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ artwork.size }}</td>
                <td>{{ artwork.technique }}</td>
                <td>{{ artwork.description }}</td>
            </tr>
            </tbody>
        </table>

        <div class="text-center">
            <a href="{{ path('artwork_index') }}" class="btn btn-info">Back to the list</a>

            <a href="{{ path('artwork_edit', { 'id': artwork.id }) }}" class="btn btn-info">Edit</a>

            {{ form_start(delete_form) }}
            <input type="submit"  class="btn btn-info mt-2" value="Delete">
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
