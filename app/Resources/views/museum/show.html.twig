{% extends 'base.html.twig' %}

    {% block body %}
        <div class="container">
            <h1 class="text-center">Museum</h1>

            <table class="table table-bordered">
                <thead class="thead-dark">
                <tr>
                    <th scope="row">Id</th>
                    <th scope="row">Name</th>
                    <th scope="row">City</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ museum.id }}</td>
                    <td>{{ museum.name }}</td>
                    <td>{{ museum.city }}</td>
                </tr>
                </tbody>
            </table>
            <div class="text-center">
                <a href="{{ path('museum_index') }}" class="btn btn-info">Back to the list</a>
                <a href="{{ path('museum_edit', { 'id': museum.id }) }}" class="btn btn-info">Edit</a>
                {{ form_start(delete_form) }}
                <input class="btn btn-info mt-2" type="submit" value="Delete" class="btn btn-info">
                {{ form_end(delete_form) }}
            </div>
        </div>
    {% endblock %}
