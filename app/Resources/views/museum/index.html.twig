{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center">Museums list</h1>
    <div class="container">
    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="row">Id</th>
                <th scope="row">Name</th>
                <th scope="row">City</th>
                <th scope="row" >Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for museum in museums %}
            <tr>
                <td><a href="{{ path('museum_show', { 'id': museum.id }) }}">{{ museum.id }}</a></td>
                <td>{{ museum.name }}</td>
                <td>{{ museum.city }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('museum_show', { 'id': museum.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('museum_edit', { 'id': museum.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('museum_new') }}">Create a new museum</a>
        </li>
    </ul>
        <div>
{% endblock %}
