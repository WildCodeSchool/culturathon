{% extends 'base.html.twig' %}

{% block body %}
    <h1>Emotion</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ emotion.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ emotion.name }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ emotion.color }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('emotion_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('emotion_edit', { 'id': emotion.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
